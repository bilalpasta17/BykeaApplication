<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DeliveryActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="20dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_back_arrow"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:src="@drawable/arrow_green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery"
            android:textSize="22sp"
            android:layout_marginStart="90dp"

            />
    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_delivery"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_marginTop="60dp"
        android:elevation="20dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar">
        <ImageView
            android:id="@+id/img_buss"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:src="@drawable/home"
            android:background="@color/light_green"
            />
        <TextView
            android:id="@+id/txt_address"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_marginStart="158dp"
            android:text="I have the\n delivery \n address"
            android:textSize="30sp"
            android:gravity="center"
            />




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_just_come"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_marginTop="180dp"
        android:elevation="20dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar">

        <ImageView
            android:id="@+id/img_finger"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:background="@color/light_green"
            android:src="@drawable/click" />

        <TextView
            android:id="@+id/txt_come"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_marginStart="158dp"
            android:gravity="center"
            android:text="just come\n(extra Rs.10)"
            android:textSize="26sp" />



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>